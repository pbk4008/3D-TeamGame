    Out.vColor.rgb = color.rgb;
    Out.vColor.a = color.a * g_fAlpha;
    
    //if (Out.vColor.a < 0.01)
    //    discard;
    
    Out.vColor.r = 1.f;
    Out.vColor.gb = 0.f;
    
